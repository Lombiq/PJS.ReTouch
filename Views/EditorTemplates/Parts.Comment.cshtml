@model Orchard.Comments.Models.CommentPart

@if (WorkContext.CurrentUser == null) {
    <div class="row">
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Author, new { @class = "form-control", placeholder = T("Name (required)") })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = T("Email (required)") })
        </div>
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.SiteName, new { @class = "form-control", placeholder = T("Website") })
        </div>
    </div>
}
else {
    @Html.Hidden("Name", WorkContext.CurrentUser.UserName ?? "")
    @Html.Hidden("Email", WorkContext.CurrentUser.Email ?? "")
}
@Html.TextAreaFor(m => m.CommentText, new { rows = 3, @class = "form-control", placeholder = T("Comments") })
@Html.HiddenFor(m => m.CommentedOn)
@Html.HiddenFor(m => m.RepliedOn)
<button type="submit" class="btn btn-flat btn-rounded flat-color">@T("Post Comment")</button>
