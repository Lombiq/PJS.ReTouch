@*
    ErrorPage(string Message, Exception Exception)
*@
@{
    Html.TitleForPage(T("Oops. Something went wrong"));
}

<div class="col-md-6 pad-25">
    <div class="error404">
        <span>@T("500")</span>
    </div>
</div>
<div class="col-md-6 pad-25">
    <div class="details404">
        <h3>@T("An unhandled exception has occurred and the request was terminated.")</h3>
        <p>@T("Please refresh the page. If the error persists, go back.")</p>
        @using (Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "search-form" })) {
            <input name="q" type="text" class="form-control" placeholder="@T("Search") ..." />
        }
        <a href="/" class="btn btn-flat btn-rounded flat-color"><i class="fa fa-long-arrow-left"></i>&nbsp;@T("Back to Home")</a>
    </div>
</div>
