@using Orchard.ContentManagement;
@using PJS.ReTouch.Models;

@{
    var settings = WorkContext.CurrentSite.As<ReTouchThemeSettingsPart>();

    string title = Convert.ToString(Model.Title);
    string siteName = Convert.ToString(WorkContext.CurrentSite.SiteName);

    Display.Resources();
}

<!DOCTYPE html>
<!--[if lt IE 7]>
    <html lang="@WorkContext.CurrentCulture" class="ie old-browser lt-ie10 lt-ie9 lt-ie8 lt-ie7">
<![endif]-->
<!--[if IE 7]>
    <html lang="@WorkContext.CurrentCulture" class="ie old-browser ie7 lt-ie10 lt-ie9 lt-ie8">
<![endif]-->
<!--[if IE 8]>
    <html lang="@WorkContext.CurrentCulture" class="ie old-browser ie8 lt-ie10 lt-ie9">
<![endif]-->
<!--[if IE 9]>
    <html lang="@WorkContext.CurrentCulture" class="ie modern-browser ie9 lt-ie10">
<![endif]-->
<!--[if gt IE 9]><!-->
<html lang="@WorkContext.CurrentCulture" class="no-js modern-browser">
<!--<![endif]-->

<head>
    <meta charset="utf-8" />
    <meta name="robots" content="index, follow, archive" />
    <title>@Html.Title(title, siteName)</title>

    @Display(Model.Head)

    <script type="text/javascript">
        (function (d) { d.className = "dyn" + d.className.substring(6, d.className.length); })(document.documentElement);
    </script>
</head>

<body class="theme-@WorkContext.CurrentTheme.Id @settings.Skin @(settings.UseHoverMenus ? "hoverMenus" : string.Empty) off">
    @Display(Model.Body)
    @Display(Model.Tail)
</body>
</html>
